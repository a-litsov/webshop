<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ua.oleh.entities.Products" table="products" schema="web_task">
        <id name="id" column="id"/>
        <property name="productName" column="product_name"/>
        <property name="price" column="price"/>
        <property name="productCategory" column="product_category"/>
        <property name="avilible" column="avilible"/>
        <property name="color" column="color"/>
        <property name="mark" column="mark"/>
    </class>
</hibernate-mapping>